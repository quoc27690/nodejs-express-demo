extends ../../layouts/common

block content
  
  h1 Users

  div(class='d-flex')
    h4
      a(href="/", class='btn btn-primary mr-3') Back Home
    h4
      a(href="/users/create", class='btn btn-info mr-3') Create New A User
    h4
      a(href="/users/", class='btn btn-warning') Show All Users

  form(action="/users/search", method='GET', class='d-flex')
    input(type="text", name='q', placeholder='Search With Name', class='form-control')
    button(class='btn btn-primary ml-2') Search
    
  table(style="width: 400px; text-align: left", class='table')
    tr
      th Avatar
      th Name
      th Edit
      th Delete
    each user in users
      tr
        td
          if user.avatar
            img.rounded(src= user.avatar width="64" height="64")
          else
            img.rounded(src="https://res.cloudinary.com/dnsdasaly/image/upload/v1587889811/r0xxbnrirt87mikftelt.jpg" width="64" height="64")
        td(class='align-middle')
          span= user.name
        td(class='align-middle')
          a(href="/users/" + user.id + '/edit', class='btn btn-light ') Edit
        td(class='align-middle')
          a.btn.btn-light(href="/users/" + user.id + "/delete") Delete
